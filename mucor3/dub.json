{
	"name": "mucor3",
	"authors": [
		"Thomas Gregory"
	],
	"description": "Mucor3: From VCF to spreadsheet.",
	"license": "MIT",
	"dependencies": {
		"asdf": "~>0.7.8",
		"dhtslib": "~>0.14.0+htslib-1.13",
		"libmucor":{
			"path": "../libmucor"
		},
		"progress": "~>5.0.1",
		"drocks": {
			"path": "../drocks"
		},
	},
	"targetPath": "../bin",
	"configurations": [
		{
			"name": "standard",
			"targetType": "executable",
			"libs": ["rocksdb"]
		},
		{
			"name": "SSE4",
			"targetType": "executable",
			"dflags-ldc": ["-mattr=+sse4.2"]
		},
		{
			"name": "unittest",
			"excludedSourceFiles": ["source/app.d"]
		},
		{
			"name":"static-alpine",
			"targetType": "executable",
			"dflags-ldc": [
				"-link-defaultlib-shared=false",
				"-static",
				"--linker=gold",
				"-L-lz",
				"-L-lbz2",
				"-L-ldeflate",
				"-L-llzma",
				"-L-lcurl", 
				"-L-lssl", 
				"-L-lssh2", 
				"-L-lcrypto"
			],
			"sourceFiles": ["/usr/local/lib/mimalloc-2.0/mimalloc.o"]
		}
	]
}